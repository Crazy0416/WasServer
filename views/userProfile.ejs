<body>
<script>
    $(window).ready(function(){
        getMyPostRange(0);
    })
    $(window).scroll(function() {
        if ($(window).scrollTop() >= $(document).height() - $(window).height()) {
            // TODO : 무한스크롤 이벤트
            var CardCnt = getCookie('CardCnt');
            console.log('CardCnt ', CardCnt);
            getMyPostRange(parseInt(CardCnt));
        }
    });
</script>
<%- include('header')%>
